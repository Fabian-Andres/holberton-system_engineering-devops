#!/usr/bin/env bash
# not found
sudo apt-get update
sudo apt-get -y install nginx
sudo echo "Ceci n'est pas une pag" > '/var/www/html/404.html'
old_redirect='permanent;'
new_redirect='permanent;\n\terror_page 404 /404.html;'
sudo sed -i "s/'$old_redirect'/'$new_redirect'/" /etc/nginx/sites-available/default
sudo service nginx restart