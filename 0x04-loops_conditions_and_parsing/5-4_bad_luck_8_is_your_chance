#!/usr/bin/env bash
# This script is displaying "Holberton School" 10 times and say "bad luck" in line 4 and "good luck" in line 8
i=1
while [[ $i -lt 11 ]]; do
    if ((i == 4)); then
        echo "bad luck"
    elif ((i == 8)); then
        echo "good luck"
    else
        echo "Holberton School"
    fi
    i=$(( i+1 ))
done
